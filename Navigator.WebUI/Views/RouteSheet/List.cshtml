@using Navigator.Domain.Entities
@model IEnumerable<List2Nav>

@{
    ViewBag.Title = "Route Sheets";
}

@(Html.Kendo().Grid(Model) // Bind the grid to the Model property of the view
      .Name("Grid")
      .Columns(columns =>
      {
          columns.Bound(p => p.NumML);   //Create a column bound to the "ProductID" property
          columns.Bound(p => p.AdresA); //Create a column bound to the "ProductName" property
          columns.Bound(p => p.AdresB);   //Create a column bound to the "UnitPrice" property
          columns.Bound(p => p.utverzh);//Create a column bound to the "UnitsInStock" property
      })
     .Pageable().Sortable()
    .Scrollable(scr => scr.Height(430))
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
     ) //Enable paging
)
