<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="@Url.Content("~/Scripts/jquery-2.1.4.js")"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>

    @*<script src="~/Scripts/bootstrap-select.min.js"></script>*@

